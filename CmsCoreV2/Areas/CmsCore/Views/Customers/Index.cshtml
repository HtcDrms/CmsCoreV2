@model IEnumerable<CmsCoreV2.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Müşteri Oluştur</a>
</p>
<table id="tblRecords" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BillingAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillingFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillingLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillingCompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillingZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippingAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippingFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippingLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippingCompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippingZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppTenantId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillingCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillingCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillingDistrict)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippingCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippingCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippingDistrict)
            </th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BillingAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillingFirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillingLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillingCompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillingZipCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippingAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippingFirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippingLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippingCompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippingZipCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppTenantId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillingCity.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillingCountry.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillingDistrict.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippingCity.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippingCountry.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippingDistrict.Name)
                </td>
                <td class="text-nowrap">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Detaylar</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
