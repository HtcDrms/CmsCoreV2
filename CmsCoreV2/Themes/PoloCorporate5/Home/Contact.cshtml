@inject CustomLocalizer Localizer
@model PageViewModel
@{
    ViewData["Title"] = Model.SeoTitle;
}

<!-- Page title -->
<section id="page-title" data-parallax-image="@Model.Photo">
    <div class="container">
        <div class="page-title">
            <h1>@Model.Title</h1>
            <span>@Model.Meta1</span>
        </div>
        <div class="breadcrumb">
            <ul>
                <li><a href="#">Home</a> </li>
                <li><a href="#">Pages</a> </li>
                <li class="active"><a href="#">Contact Us</a> </li>
            </ul>
        </div>
    </div>
</section>
<!-- end: Page title -->
<!-- CONTENT -->
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3 class="text-uppercase">@Model.Title</h3>
                <p>@Model.Meta1</p>
                <div class="m-t-30">
                    @await Component.InvokeAsync("EmbedForm", new { name = "İletişim", template = "ContactForm" })

                </div>
            </div>
            <div class="col-md-6">
                <h3 class="text-uppercase">Adres & Harita</h3>
                <div class="row">
                    <div class="col-md-6">
                        <address>
                            <strong>Bilişim Eğitim Merkezi</strong><br>
                            Bahariye Cad.SüleymanPaşa Sok. No:2<br>
                            Kadıköy, İstanbul<br>
                            <abbr title="Phone">Tel:</abbr> 216-346-26-06
                        </address>
                    </div>
                    <div class="col-md-6">
                        <address>
                            <strong>Bir İnsan Akademisi</strong><br>
                            Bahariye Cad.SüleymanPaşa Sok. No:2<br>
                            Kadıköy, İstanbul<br>
                            <abbr title="Phone">Tel:</abbr> 216-346-26-06
                        </address>
                    </div>
                </div>

                <!-- Google map sensor -->
                <script type="text/javascript" src="//maps.googleapis.com/maps/api/js?v=3.exp"></script>
                <div class="map m-t-30" data-map-address="Melburne, Australia" data-map-zoom="10" data-map-icon="images/markers/marker2.png" data-map-type="ROADMAP"></div>
                <!-- Google map sensor -->

            </div>
        </div>
    </div>
</section>
<!-- end: CONTENT -->

