@inject CustomLocalizer Localizer
@model CmsCoreV2.Models.Slider
@inject AppTenant Tenant

@if (Model != null && Model.Id > 0)
{
    <!-- Inspiro Slider -->
    <div id="slider" class="inspiro-slider slider-halfscreen arrows-large arrows-creative dots-creative" data-height-xs="360" data-autoplay-timeout="2600" data-animate-in="fadeIn" data-animate-out="fadeOut" data-items="1" data-loop="true" data-autoplay="true">
        <!-- Slide 1 -->
        @foreach (var slide in Model.Slides.Where(w => w.IsPublished == true).ToList().Take(5).OrderBy(f => f.Position))
        {
            <div class="slide background-image img-responsive" style="background-image:url('@slide.Photo');">
                <div class="container">
                    <div class="slide-captions">
                        @if (slide.DisplayTexts != false)
                        {
                           <!-- Captions -->
                            <h6>@slide.SubTitle</h6>
                            <h2 class="text-uppercase text-medium">@slide.Title</h2>
                            <p class="lead">
                                @slide.Description
                            </p>
                            <a class="btn" href="@slide.CallToActionUrl">@slide.CallToActionText</a>
                        <!-- end: Captions -->
                        }
                        else
                        {


                        }
                     
                    </div>
                </div>
            </div>

        }

        <!-- end: Slide 1 -->
    </div>
    <!--end: Inspiro Slider -->
}
